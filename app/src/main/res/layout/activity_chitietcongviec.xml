<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Chitietcongviec">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/nen_main"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/back_icon" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/bovien_back2">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/serch_icon_den" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Tìm kiếm công việc, Công Ty" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Data Engineer - Salary Up to $3000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="#FF5C00"
                android:textSize="18dp"
                android:text="Lên đến $3,000"/>
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/bovien_gray"
                android:textSize="18dp"
                android:text="Toàn Thời Gian"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:textSize="17dp"
            android:text="Hà Nội" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_UngTuyen"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#F05123"
                android:text="Ứng Tuyển"
                android:textAllCaps="false"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:elevation="0dp" />
            <ImageView
                android:layout_margin="5dp"
                android:background="@drawable/bovien_textinput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yeuthich_icon_xam"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/logo1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#0500FF"
                android:text="FPT Sofwed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="10 công việc"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Đãi Ngộ"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_daingo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_daingo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_daingo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Mô tả công việc"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/tv_mota1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_mota2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_mota3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Địa điểm làm việc"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/bovien_textinput"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/map"
                        android:layout_gravity="start"/>
                    <TextView
                        android:id="@+id/tv_diadiem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>