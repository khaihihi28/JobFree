<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <!-- Nội dung của BottomSheet -->
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="58dp"
                    android:padding="8dp"
                    >

                    <TextView
                        android:id="@+id/unlock_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unlock_message"
                        android:textSize="16sp"
                        android:textColor="#9F000000"
                        />
                    <TextView
                        android:id="@+id/tv_showMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm"
                        android:textColor="@color/color_main_app"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        >

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số coin hiện tại:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_have_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_toRightOf="@+id/tv_1"
                            android:layout_marginLeft="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/color_main_app"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_erro_unlock_by_jcoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn không JCoin để mở tài khoản"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/btn_unlick_by_jcoin"
                        android:background="@drawable/bovien_button_cam"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="8dp"
                        android:text="Mở tài khoản bằng Jcoin"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/black" />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Hoặc"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/dark_gray"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/btn_pay_zalopay"
                            android:background="@color/com_facebook_blue"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:text="Thanh toán bằng ZaloPay"
                            />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/btn_pay_momo"
                            android:background="#FF5959"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:text="Thanh toán bằng Momo"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="vertical"
                android:background="@drawable/nen_main"
                android:layout_gravity="top|left|center_vertical"
                >

                <TextView
                    android:id="@+id/btn_X"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="X"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>

